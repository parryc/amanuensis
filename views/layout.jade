!!!
html(lang='en')
  head
    title= title 
    meta(name="viewport",content="width=device-width, initial-scale=1.0", charset="UTF-8")
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='shortcut icon', href='favicon.ico')


  body
    div.top-bar
    aside
      a(href="/")
        img(src="/images/logo.png")
      - if (typeof(user) !== 'undefined'){
          a(href="logout").menu Logout, #{user.username}
          a(href="add").menu.right Add
      -} else {
          br
          span(data-hide="signup")#login.toggle.button Login
          span(data-hide="login")#signup.right.toggle.button Sign-up
          div.box#login-target.hidden
            include login
          div.box#signup-target.hidden
            include signup
      -}
      block side
    article
      block content

  script(type='text/javascript', src='/javascripts/events.js')